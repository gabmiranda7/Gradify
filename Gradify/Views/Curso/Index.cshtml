@model IEnumerable<Gradify.DTOs.CursoDTO>

@{
    ViewData["Title"] = "Cursos";
}

<h2 class="text mb-4">Cursos</h2>

<a asp-action="Criar" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Novo Curso
</a>

<table class="table table-bordered table-hover rounded">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var curso in Model)
        {
            <tr>
                <td>@curso.Nome</td>
                <td>@curso.Descricao</td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@curso.Id" class="btn btn-sm btn-info me-1">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Editar" asp-route-id="@curso.Id" class="btn btn-sm btn-warning me-1">
                        <i class="fas fa-edit"></i>
                    </a>

                    <form id="form-excluir-@curso.Id" method="post" asp-action="Excluir" asp-route-id="@curso.Id" style="display:none;">
                        @Html.AntiForgeryToken()
                    </form>
                    <a asp-controller="Turma" asp-action="Index" asp-route-cursoId="@curso.Id" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-users"></i> Ver Turmas
                    </a>
                    <button class="btn btn-sm btn-danger" onclick="confirmarExclusao('@curso.Id')">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmarExclusao(id) {
            Swal.fire({
                title: 'Tem certeza?',
                text: "Essa ação não pode ser desfeita!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sim, excluir!'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('form-excluir-' + id).submit();
                }
            });
        }
    </script>
}