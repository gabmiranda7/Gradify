@model Gradify.Dto.AnotacaoCriacaoDto

@{
    ViewData["Title"] = "Criar Anotação";
}

<h1>Criar Anotação</h1>

<form asp-action="Criar">
    <div class="form-group">
        <label asp-for="Comentario"></label>
        <input asp-for="Comentario" class="form-control" />
        <span asp-validation-for="Comentario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TurmaId">Matéria</label>
        <select asp-for="TurmaId" class="form-control" asp-items="ViewBag.Turmas">
            <option value="">Selecione uma matéria</option>
        </select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>