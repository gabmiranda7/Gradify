@model Gradify.Dto.AnotacaoLeituraDto

@{
    ViewData["Title"] = "Detalhes da Anotação";
}

<h1 class="mb-4 text-center">
    <i class="fas fa-clipboard"></i> @ViewData["Title"]
</h1>

<div class="card shadow rounded-4 mb-4">
    <div class="card-body">
        <h5 class="card-title">
            <i class="fas fa-comment-alt"></i> Comentário
        </h5>
        <p class="card-text fs-5">@Model.Comentario</p>

        <hr />

        <h5 class="card-title mt-4">
            <i class="fas fa-book-open"></i> Matéria
        </h5>
        <p class="card-text fs-5">@Model.Materia</p>

        <hr />

        <h5 class="card-title mt-4">
            <i class="fas fa-calendar-alt"></i> Data de Criação
        </h5>
        <p class="card-text fs-5">
            @Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")
        </p>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-edit"></i> Editar
    </a>
</div>