@model Gradify.DTOs.AnotacaoDTO

@{
    ViewData["Title"] = "Editar Anotação";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h2 class="mb-0">
                <i class="fas fa-edit"></i> @ViewData["Title"]
            </h2>
        </div>

        <div class="card-body">
            <form asp-action="Editar">
                <input type="hidden" asp-for="Id" />

                <input type="hidden" asp-for="AlunoId" />

                <input type="hidden" asp-for="DataCriacao" />

                <div class="mb-3">
                    <label asp-for="Texto" class="form-label fw-bold">
                        <i class="fas fa-comment"></i> Comentário
                    </label>
                    <input asp-for="Texto" class="form-control" placeholder="Digite o comentário" />
                    <span asp-validation-for="Texto" class="text-danger"></span>
                </div>
@* 
                <div class="mb-4">
                    <label asp-for="CursoId" class="form-label fw-bold">
                        <i class="fas fa-book"></i> Matéria
                    </label>
                    <select asp-for="CursoId" class="form-select" asp-items="ViewBag.Cursos">
                        <option value="">Selecione uma matéria</option>
                    </select>
                    <span asp-validation-for="CursoId" class="text-danger"></span>
                </div> *@

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save"></i> Atualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>