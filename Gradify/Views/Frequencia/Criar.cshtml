@model Gradify.Dto.FrequenciaCriacaoDto

@{
    ViewData["Title"] = "Registrar Frequência";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Criar" method="post">
    <div class="form-group">
        <label asp-for="AlunoId" class="control-label"></label>
        <select asp-for="AlunoId" class="form-control" required>
            <option value="">Selecione um aluno</option>
            @foreach (var aluno in ViewBag.Alunos as SelectList)
            {
                <option value="@aluno.Value">@aluno.Text</option>
            }
        </select>
        <span asp-validation-for="AlunoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TurmaId" class="control-label"></label>
        <select asp-for="TurmaId" class="form-control" required>
            <option value="">Selecione uma turma</option>
            @foreach (var turma in ViewBag.Turmas as SelectList)
            {
                <option value="@turma.Value">@turma.Text</option>
            }
        </select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data" class="control-label"></label>
        <input asp-for="Data" class="form-control" type="date" required />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a>