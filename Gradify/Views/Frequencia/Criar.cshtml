@model Gradify.Dto.FrequenciaCriacaoDto

@{
    ViewData["Title"] = "Registrar Frequência";
}

<h2>
    <i class="fas fa-calendar-plus"></i> @ViewData["Title"]
</h2>

<form asp-action="Criar" method="post" class="mb-4">
    <div class="mb-3">
        <label asp-for="AlunoId" class="form-label fw-bold">Aluno</label>
        <select asp-for="AlunoId" class="form-select" required>
            <option value="">Selecione um aluno</option>
            @foreach (var aluno in ViewBag.Alunos as SelectList)
            {
                <option value="@aluno.Value">@aluno.Text</option>
            }
        </select>
        <span asp-validation-for="AlunoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TurmaId" class="form-label fw-bold">Turma</label>
        <select asp-for="TurmaId" class="form-select" required>
            <option value="">Selecione uma turma</option>
            @foreach (var turma in ViewBag.Turmas as SelectList)
            {
                <option value="@turma.Value">@turma.Text</option>
            }
        </select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Data" class="form-label fw-bold">Data</label>
        <input asp-for="Data" class="form-control" type="date" required />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check"></i> Registrar
        </button>
    </div>
</form>