@model Gradify.DTOs.FrequenciaDTO

@{
    ViewData["Title"] = "Registrar Frequência";
}

<h2 class="text-white mb-4">Registrar Frequência</h2>

<p class="text-light">A frequência será registrada para o usuário logado (ou conforme seleção, se aplicável).</p>

<form asp-action="Criar" method="post">
    <div class="form-group mb-3">
        <label asp-for="DataFrequencia" class="form-label">Data</label>
        <input asp-for="DataFrequencia" type="date" class="form-control" />
        <span asp-validation-for="DataFrequencia" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AlunoId" class="form-label">Aluno</label>
        <select asp-for="AlunoId" class="form-select" asp-items="ViewBag.Alunos">
            <option value="">-- Selecione um aluno --</option>
        </select>
        <span asp-validation-for="AlunoId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TurmaId" class="form-label">Turma</label>
        <select asp-for="TurmaId" class="form-select" asp-items="ViewBag.Turmas">
            <option value="">-- Selecione uma turma --</option>
        </select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-check"></i> Registrar
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-times"></i> Cancelar
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}