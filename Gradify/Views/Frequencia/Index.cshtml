@model IEnumerable<Gradify.Dto.FrequenciaLeituraDto>

@{
    ViewData["Title"] = "Frequências";
}

<h2>
    <i class="fas fa-calendar-check"></i> @ViewData["Title"]
</h2>

<p>
    <a href="@Url.Action("Criar")" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Registrar Frequência
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Aluno</th>
            <th>Matéria</th>
            <th>Data</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(f => f.AlunoNome))
        {
            <tr>
                <td>@item.AlunoNome</td>
                <td>@item.Materia</td>
                <td>@item.Data.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Detalhes", new { id = item.Id })" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Detalhes
                    </a>
                    <a href="@Url.Action("Editar", new { id = item.Id })" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="javascript:void(0);" onclick="confirmarExclusao(@item.Id)" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Sucesso"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Sucesso!',
            text: '@TempData["Sucesso"]',
            confirmButtonColor: '#3085d6'
        });
    </script>
}

@if (TempData["Erro"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Erro!',
            text: '@TempData["Erro"]',
            confirmButtonColor: '#d33'
        });
    </script>
}

@section Scripts {
    <script>
        function confirmarExclusao(id) {
            Swal.fire({
                title: 'Você tem certeza?',
                text: "Esta ação não pode ser desfeita!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sim, excluir!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Excluir", "Frequencia")/' + id;
                }
            });
        }
    </script>
}