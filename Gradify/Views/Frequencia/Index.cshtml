@* --- FREQUENCIA INDEX COM ESTILIZAÇÃO UNIFICADA --- *@
@model IEnumerable<Gradify.Models.Frequencia>
@{
    ViewData["Title"] = "Frequências Registradas";
}

<div class="container mt-5">
    <h2 class="mb-4" style="color: #6c5b3f;"><i class="fas fa-list-check me-2"></i> Frequências Registradas</h2>

    <table class="table table-hover bg-white rounded shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Aluno</th>
                <th>Turma</th>
                <th>Aula</th>
                <th>Presente?</th>
                <th>Data Registro</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.Aluno?.Nome</td>
                    <td>@f.Turma?.Nome</td>
                    <td>@f.Aula?.Tema</td>
                    <td>
                        @if (f.Presente)
                        {
                            <span class="badge bg-success">Sim</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Não</span>
                        }
                    </td>
                    <td>@f.DataRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
