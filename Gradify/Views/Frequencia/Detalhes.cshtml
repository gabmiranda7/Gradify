@model Gradify.Dto.FrequenciaLeituraDto

@{
    ViewData["Title"] = "Detalhes da Frequência";
}

<h1 class="mb-4 text-center">
    <i class="fas fa-eye"></i> @ViewData["Title"]
</h1>

<div class="card p-4 shadow rounded-4 dark-mode-card">
    <h4 class="mb-3 text-strong-light">
        <i class="fas fa-user-graduate"></i>
        Frequência de <strong>@Model.AlunoNome</strong>
    </h4>

    <p class="mb-2 text-strong-light">
        <i class="fas fa-book"></i>
        <strong>Matéria:</strong> @Model.Materia
    </p>

    <p class="mb-2 text-strong-light">
        <i class="fas fa-calendar-day"></i>
        <strong>Data da Aula:</strong> @Model.Data.ToString("dd/MM/yyyy")
    </p>

    @if (!string.IsNullOrEmpty(Model.DiaSemana))
    {
        <p class="mb-0 text-strong-light">
            <i class="fas fa-calendar-week"></i>
            <strong>Dia da Semana da Turma:</strong> @Model.DiaSemana
        </p>
    }
</div>

<div class="mt-4 text-center">
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>