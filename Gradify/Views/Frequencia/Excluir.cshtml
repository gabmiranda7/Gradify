@model Gradify.Dto.FrequenciaLeituraDto

@{
    ViewData["Title"] = "Excluir Frequência";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h3>Você tem certeza que deseja excluir esta frequência?</h3>
    <p><strong>Aluno:</strong> @Model.AlunoId</p>
    <p><strong>Turma:</strong> @Model.TurmaId</p>
    <p><strong>Data:</strong> @Model.Data.ToString("dd/MM/yyyy")</p>
</div>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>