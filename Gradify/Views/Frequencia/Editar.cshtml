@model Gradify.DTOs.FrequenciaDTO

@{
    ViewData["Title"] = "Editar Frequência";
}

<h2 class="text mb-4">Editar Frequência</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="DataFrequencia" class="form-label">Data</label>
        <input asp-for="DataFrequencia" type="date" class="form-control" />
        <span asp-validation-for="DataFrequencia" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Aluno</label>
        <input type="text" class="form-control" value="@ViewBag.AlunoLogadoNome" disabled />
        <input asp-for="AlunoId" type="hidden" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="TurmaId" class="form-label">Turma</label>
        <select asp-for="TurmaId" class="form-select" asp-items="ViewBag.Turmas">
            <option value="">-- Selecione uma turma --</option>
        </select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="fas fa-save"></i> Salvar
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-times"></i> Cancelar
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}