@model Gradify.Dto.FrequenciaCriacaoDto

@{
    ViewData["Title"] = "Editar Frequência";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label asp-for="AlunoId" class="control-label"></label>
        <select asp-for="AlunoId" class="form-control" asp-items="ViewBag.Alunos"></select>
        <span asp-validation-for="AlunoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TurmaId" class="control-label"></label>
        <select asp-for="TurmaId" class="form-control" asp-items="ViewBag.Turmas"></select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data" class="control-label"></label>
        <input asp-for="Data" class="form-control" type="date" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a>