@using Gradify.ViewModels;
@model MudarSenhaViewModel;

@{
    ViewData["Title"] = "Mudar Senha";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="account-box shadow rounded p-4 bg-white" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4 fw-bold text-success">Mudar Senha</h2>

        <form asp-action="MudarSenha" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NovaSenha" class="form-label fw-semibold">Nova Senha</label>
                <input asp-for="NovaSenha" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="NovaSenha" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmarNovaSenha" class="form-label fw-semibold">Confirmar Nova Senha</label>
                <input asp-for="ConfirmarNovaSenha" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="ConfirmarNovaSenha" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 py-2">
                <i class="fas fa-lock me-2"></i> Mudar Senha
            </button>

            <div class="text-center mt-3">
                <a asp-controller="Conta" asp-action="VerificarEmail" class="text-decoration-none small">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}