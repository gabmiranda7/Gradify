@using Gradify.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="account-box shadow rounded p-4 bg-white" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4 fw-bold text-success">Entrar no Gradify</h2>

        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" autocomplete="email" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Senha" class="form-label fw-semibold">Senha</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input asp-for="Senha" type="password" class="form-control" autocomplete="current-password" />
                </div>
                <span asp-validation-for="Senha" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <a asp-controller="Conta" asp-action="VerificarEmail" class="text-decoration-none small">Esqueci a senha</a>
            </div>

            <button type="submit" class="btn btn-success w-100 py-2">
                <i class="fas fa-sign-in-alt me-2"></i> Entrar
            </button>

            <div class="text-center mt-3">
                <p class="mb-1">
                    Não possui uma conta?
                    <a asp-controller="Conta" asp-action="Registrar" class="text-decoration-none">Registrar</a>
                </p>
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none small">← Voltar para o início</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}