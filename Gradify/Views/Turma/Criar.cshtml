@model Gradify.DTOs.TurmaDTO

@{
    ViewData["Title"] = "Criar Turma";
    var cursoNome = ViewBag.CursoNome as string;
}


<h2>Criar Turma</h2>

<form asp-action="Criar" method="post">
    <input type="hidden" asp-for="CursoId" />

    <div class="form-group mb-3">
        <label>Curso</label>
        <input class="form-control" value="@cursoNome" readonly />
    </div>
        <label>Período (ex: 2025/01)</label>
        <input asp-for="Nome" class="form-control" placeholder="2025/01" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DataInicio" class="form-label"></label>
        <input asp-for="DataInicio" type="date" class="form-control" />
        <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataFim" class="form-label"></label>
        <input asp-for="DataFim" type="date" class="form-control" />
        <span asp-validation-for="DataFim" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    <input type="hidden" asp-for="CursoId" />
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}