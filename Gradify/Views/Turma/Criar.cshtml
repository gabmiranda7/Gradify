@model Gradify.Dto.TurmaCriacaoDto

<h2><i class="fas fa-chalkboard-teacher"></i> Criar Nova Turma</h2>

<form asp-action="Criar" method="post">
    <div class="mb-3">
        <label for="Materia" class="form-label fw-bold">Matéria</label>
        <input type="text" class="form-control" id="Materia" name="Materia" value="@Model.Materia" required />
        <span asp-validation-for="Materia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="DiaDaAula" class="form-label fw-bold">Dia da Aula</label>
        <select class="form-select" id="DiaDaAula" name="DiaDaAula" required>
            <option value="">Selecione o dia da aula</option>
            @foreach (var dia in ViewBag.DiasDaSemana)
            {
                <option value="@dia">@dia</option>
            }
        </select>
        <span asp-validation-for="DiaDaAula" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ProfessorId" class="form-label fw-bold">Professor</label>
        <select class="form-select" id="ProfessorId" name="ProfessorId" required>
            <option value="">Selecione o professor</option>
            @foreach (var professor in ViewBag.Professores)
            {
                <option value="@professor.Id">@professor.Nome</option>
            }
        </select>
        <span asp-validation-for="ProfessorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Criar
    </button>
</form>