@model Gradify.Dto.TurmaLeituraDto

<h2>Editar Turma</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Materia">Matéria</label>
        <input type="text" class="form-control" id="Materia" name="Materia" value="@Model.Materia" required />
    </div>

    <div class="form-group">
        <label for="DiaDaAula">Dia da Aula</label>
        <select class="form-control" asp-for="DiaDaAula" required>
            @foreach (var dia in ViewBag.DiasDaSemana)
            {
                <option value="@dia">@dia</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ProfessorId">Professor</label>
        <select class="form-control" asp-for="ProfessorId" required>
            @foreach (var professor in ViewBag.Professores)
            {
                <option value="@professor.Id">@professor.Nome</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Salvar
    </button>
</form>