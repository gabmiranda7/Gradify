@model Gradify.Dto.TurmaCriacaoDto

<div class="card shadow-sm rounded-3 mt-4 p-4">
    <h2 class="mb-4">
        <i class="fas fa-edit"></i> Editar Turma
    </h2>

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Materia" class="form-label">Matéria</label>
            <input asp-for="Materia" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label asp-for="DiaDaAula" class="form-label">Dia da Aula</label>
            <select asp-for="DiaDaAula" class="form-control" required>
                @foreach (string dia in ViewBag.DiasDaSemana)
                {
                    <option value="@dia" selected="@(Model.DiaDaAula == dia ? "selected" : null)">@dia</option>
                }
            </select>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ProfessorId" class="form-label">Professor</label>
            <select asp-for="ProfessorId" class="form-control" required>
                @foreach (SelectListItem professor in ViewBag.Professores)
                {
                    <option value="@professor.Value" selected="@(Model.ProfessorId.ToString() == professor.Value ? "selected" : null)">
                        @professor.Text
                    </option>
                }
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index", "Turma")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Salvar
            </button>
        </div>
    </form>
</div>