@model IEnumerable<Gradify.Dto.TurmaLeituraDto>

<h2>Lista de Turmas</h2>

<a href="@Url.Action("Criar")" class="btn btn-success mb-3">Criar Nova Turma</a>

<table class="table">
    <thead>
        <tr>
            <th>Matéria</th>
            <th>Dia da Aula</th>
            <th>Professor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var turma in Model)
        {
            <tr>
                <td>@turma.Materia</td>
                <td>@turma.DiaDaAula</td>
                <td>@turma.ProfessorNome</td>
                <td>
                    <a href="@Url.Action("Editar", "Turma", new { id = turma.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Excluir", "Turma", new { id = turma.Id })" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>