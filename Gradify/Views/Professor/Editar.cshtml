@model Gradify.DTOs.ProfessorDTO
@{
    ViewData["Title"] = "Editar Professor";
}

<h1 class="mb-4 text-center text-warning">
    <i class="fas fa-edit"></i> @ViewData["Title"]
</h1>

<form asp-action="Editar" class="card p-4 shadow rounded-4 dark-mode-card">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label fw-bold"><i class="fas fa-user"></i> Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Email" class="form-label fw-bold"><i class="fas fa-envelope"></i> Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Cancelar</a>
        <button type="submit" class="btn btn-warning text-white"><i class="fas fa-save"></i> Salvar</button>
    </div>
</form>