@* --- ALUNO INDEX COM ESTILIZAÇÃO UNIFICADA --- *@
@model IEnumerable<Gradify.DTOs.AlunoDTO>
@{
    ViewData["Title"] = "Alunos";
}

<style>
    body {
        background-color: #fdf8f2;
    }

    h1 {
        color: #6c5b3f;
        font-weight: bold;
    }

    .table {
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

        .table th {
            background-color: #ece8e2;
            color: #5a4833;
        }

    .btn {
        border-radius: 8px;
        color: white;
    }

    .btn-primary {
        background-color: #3a4f63;
        border-color: #3a4f63;
    }

    .btn-info {
        background-color: #2b8da9;
        border-color: #2b8da9;
    }

    .btn-warning {
        background-color: #c1873e;
        border-color: #c1873e;
    }

    .btn-danger {
        background-color: #a13c2f;
        border-color: #a13c2f;
    }
</style>

<h1 class="mb-4"><i class="fas fa-users"></i> Alunos</h1>
<p>
    <a href="@Url.Action("Criar")" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Adicionar Aluno
    </a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Matrícula</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>@aluno.Nome</td>
                <td>@aluno.Matricula</td>
                <td>@aluno.Email</td>
                <td>
                    <a href="@Url.Action("Detalhes", new { id = aluno.Id })" class="btn btn-info btn-sm me-1">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="@Url.Action("Editar", new { id = aluno.Id })" class="btn btn-warning btn-sm me-1">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-action="Excluir" asp-route-id="@aluno.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este aluno?');">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>