@{
    ViewData["Title"] = "Início";
}

<style>
    .btn-outline-anotacao {
        color: #17a2b8;
        border-color: #17a2b8;
        background-color: transparent;
    }

        .btn-outline-anotacao:hover,
        .btn-outline-anotacao:focus {
            background-color: #17a2b8;
            color: white;
            border-color: #17a2b8;
        }

    .btn-outline-curso {
        color: #28a745;
        border-color: #28a745;
        background-color: transparent;
    }

        .btn-outline-curso:hover,
        .btn-outline-curso:focus {
            background-color: #28a745;
            color: white;
            border-color: #28a745;
        }
</style>

<div class="container text-center mt-5">
    <h1 class="display-4 mb-4"><i class="fas fa-school"></i> Bem-vindo ao Gradify</h1>
    <p class="lead mb-5">Escolha uma das opções abaixo para começar:</p>

    <div class="d-flex flex-column align-items-center gap-3">
        <a href="@Url.Action("Index", "Aluno")" class="btn btn-outline-primary btn-lg w-50">
            <i class="fas fa-user-graduate"></i> Alunos
        </a>

        <a href="@Url.Action("Index", "Anotacao")" class="btn btn-outline-anotacao btn-lg w-50">
            <i class="fas fa-sticky-note"></i> Anotações
        </a>

        <a href="@Url.Action("Index", "Aula")" class="btn btn-outline-danger btn-lg w-50">
            <i class="fas fa-chalkboard"></i> Aulas
        </a>

        <a href="@Url.Action("Index", "Curso")" class="btn btn-outline-curso btn-lg w-50">
            <i class="fas fa-book"></i> Cursos
        </a>

        <a href="@Url.Action("Index", "Frequencia")" class="btn btn-outline-info btn-lg w-50">
            <i class="fas fa-calendar-check"></i> Frequências
        </a>

        <a href="@Url.Action("Index", "Professor")" class="btn btn-outline-success btn-lg w-50">
            <i class="fas fa-chalkboard-teacher"></i> Professores
        </a>

        <a href="@Url.Action("Index", "Turma")" class="btn btn-outline-warning btn-lg w-50">
            <i class="fas fa-users"></i> Turmas
        </a>
    </div>
</div>