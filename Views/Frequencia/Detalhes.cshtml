@model Gradify.DTOs.FrequenciaDto

@{
    ViewData["Title"] = "Detalhes da Frequência";
}

<h1>Detalhes da Frequência</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Data.ToShortDateString()</dd>

        <dt class="col-sm-2">Aluno</dt>
        <dd class="col-sm-10">@Model.AlunoNome</dd>

        <dt class="col-sm-2">Turma</dt>
        <dd class="col-sm-10">@Model.TurmaNome</dd>
    </dl>
</div>

<p>
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>