@model Gradify.DTOs.AlunoDto
@{
    ViewData["Title"] = "Editar Aluno";
}

<h2 class="text-light">Editar Aluno</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label class="text-light">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="text-light">Matrícula</label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
