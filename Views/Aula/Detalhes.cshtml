@model Gradify.DTOs.AulaDto

@{
    ViewData["Title"] = "Detalhes da Aula";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Data:</strong> @Model.DataAula.ToShortDateString()</p>
        <p><strong>Início:</strong> @Model.HoraInicioChamada</p>
        <p><strong>Fim:</strong> @Model.HoraFimChamada</p>
        <p><strong>Turma ID:</strong> @Model.TurmaId</p>
    </div>
</div>

<a class="btn btn-secondary mt-3" asp-action="Index">Voltar</a>