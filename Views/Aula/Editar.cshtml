@model Gradify.DTOs.AulaDto

@{
    ViewData["Title"] = "Editar Aula";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="DataAula"></label>
        <input asp-for="DataAula" class="form-control" type="date" />
        <span asp-validation-for="DataAula" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HoraInicioChamada"></label>
        <input asp-for="HoraInicioChamada" class="form-control" type="time" />
        <span asp-validation-for="HoraInicioChamada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HoraFimChamada"></label>
        <input asp-for="HoraFimChamada" class="form-control" type="time" />
        <span asp-validation-for="HoraFimChamada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TurmaId"></label>
        <input asp-for="TurmaId" class="form-control" />
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>