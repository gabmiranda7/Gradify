@model Gradify.DTOs.CursoDto

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <h4>@Model.Nome</h4>
        <p><strong>Descrição:</strong> @Model.Descricao</p>
        <p><strong>Professor ID:</strong> @Model.ProfessorId</p>
    </div>
</div>

<a class="btn btn-secondary mt-3" asp-action="Index">Voltar</a>